<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">

        <org.opencv.android.JavaCameraView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:id="@+id/activity_surface_view"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_threshold3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <SeekBar
                android:rotation="270"
                android:id="@+id/seekBar_threshold3"
                android:layout_width="330dp"
                android:translationX="-140dp"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:max="500"
                android:progress="50"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_threshold4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <SeekBar
                android:rotation="270"
                android:id="@+id/seekBar_threshold4"
                android:layout_width="330dp"
                android:translationX="-140dp"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:max="100"
                android:progress="50"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_threshold5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <SeekBar
                android:rotation="270"
                android:id="@+id/seekBar_threshold5"
                android:layout_width="330dp"
                android:translationX="-140dp"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:max="500"
                android:progress="50"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar_threshold1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:max="250"
            android:progress="50" />

        <TextView
            android:id="@+id/textView_threshold1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar_threshold2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:max="250"
            android:progress="50" />

        <TextView
            android:id="@+id/textView_threshold2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

    </LinearLayout>


</LinearLayout>